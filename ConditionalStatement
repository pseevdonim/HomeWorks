public class ConditionalStatement {
    public static void main(String[] args) {
        System.out.println("Інформація про особу");
    // https://github.com/ichimax/startjava //
    int age=15;
    if(age > 20) {
        System.out.println("age>20");
    } else {
        System.out.println("age <20");
    }

    boolean maleSex=false;
    if(maleSex) {
        System.out.println("woman");
    } else if(maleSex!=true){
        System.out.println("man");
    } else {
        System.out.println("sex unknown");
    }

    
    float high = 1.75f;
    if (high < 1.80) {
        System.out.println("midle hight");
    } else {
        System.out.println("midle hight");
    }

    char firstNameSymbol = 'D';
    if(firstNameSymbol == 'M') {
        System.out.println("first name symbol  М");
    } else if(firstNameSymbol == 'I') {
        System.out.println("first symbol І");
    } else {
        System.out.println("what is the first symbol ?");
    }
    }
}
